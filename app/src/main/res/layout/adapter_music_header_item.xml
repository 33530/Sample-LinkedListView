<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/adapter_music_parent_card"
    android:layout_height="@dimen/adapter_music_parent_card"
    android:gravity="center">


    <android.support.v7.widget.CardView
        android:id="@+id/adapter.cardview"
        android:layout_width="@dimen/adapter_music_child_card"
        android:layout_height="@dimen/adapter_music_child_card"
        android:background="@android:color/white"
        card_view:cardCornerRadius="@dimen/adapter_music_card_corner"
        card_view:cardElevation="@dimen/adapter_music_card_elevation">

        <ImageView
            android:id="@+id/adapter.item.photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="@dimen/adapter_music_card_corner"
            android:background="@color/colorPrimaryDark"
            android:contentDescription="@null" />
    </android.support.v7.widget.CardView>
</LinearLayout>