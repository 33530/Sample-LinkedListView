<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/adapter_music_parent_card1_width"
        android:layout_height="@dimen/adapter_music_parent_card1_height"
        android:gravity="center">


        <android.support.v7.widget.CardView
            android:id="@+id/adapter.cardview"
            android:layout_width="@dimen/adapter_music_child_card1_width"
            android:layout_height="@dimen/adapter_music_child_card1_height"
            android:background="@android:color/white"
            card_view:cardCornerRadius="@dimen/adapter_music_card_corner1"
            card_view:cardElevation="@dimen/adapter_music_card_elevation1">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/adapter_music_parent_card_padding">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/adapter.title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Sample And Cool Amazing Name"
                        android:textSize="@dimen/adapter_music_main_text"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/adapter.author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Author Name Surname"
                            android:textSize="@dimen/adapter_music_secondary_text" />

                        <TextView
                            android:id="@+id/adapter.duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingEnd="@dimen/main_small_space"
                            android:paddingStart="@dimen/main_small_space"
                            android:text="13:59"
                            android:textSize="@dimen/adapter_music_secondary_text" />


                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/adapter_music_image_play"
                    android:layout_height="@dimen/adapter_music_image_play"
                    android:layout_gravity="end|center_vertical"
                    android:contentDescription="@null"
                    android:src="@mipmap/ic_play_circle_filled_black_24dp"
                    android:tint="@color/colorIconGray" />
            </FrameLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>